{
  "info": {
    "name": "Ecommerce API",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Postman collection for Ecommerce backend (auth, categories, products, cart, orders). Automatically sets JWT token after login/signup.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Venuste\",\n  \"email\": \"venuste@example.com\",\n  \"password\": \"123456\",\n  \"confirmPassword\": \"123456\",\n  \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "signup"]
            }
          },
          "event": [
            {
              "listen": "kappee_DB",
              "script": {
                "exec": [
                  "let res = pm.response.json();",
                  "if (res.token) {",
                  "  pm.environment.set('token', res.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"venuste@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let res = pm.response.json();",
                  "if (res.token) {",
                  "  pm.environment.set('token', res.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Women Clothes\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/categories",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "categories"]
            }
          }
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
